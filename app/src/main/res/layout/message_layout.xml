<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgMessageProfile"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txtMessageReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/imgMessageProfile"
        android:background="@drawable/message_receiver"
        android:fontFamily="@font/open_sans"
        android:text="receiver message"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txtMessageSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="@+id/txtMessageReceiver"
        android:background="@drawable/message_sender"
        android:fontFamily="@font/open_sans"
        android:text="sender message"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textSize="14sp"/>

</RelativeLayout>